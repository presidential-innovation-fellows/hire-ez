.modal.hide#signinModal(tabindex="-1", role="dialog")
  .modal-header
    button.close(type='button', data-dismiss='modal') &times;
    h5 Login to #{__('r.app_name')}
  .modal-body
    form(action="#{route('signin')}", method="POST")

      input(type='hidden', name='modal', value='true')

      .control-group
        label.control-label Email
        .controls
          input#email.span3(type='text', name='email')

      .control-group
        label.control-label Password
        .controls
          input.span3(type='password', name='password')
          a.forgot(href="#{route('forgot_password')}") Forgot Password?

      .control-group
        .controls
          label.checkbox
            input(type='checkbox', checked, name='remember')
            | Remember Me?

      p
        button.btn.btn-warning(type='submit') Sign in
